@model IEnumerable<RuteoBusesDAL.Chofer>

@{
    ViewData["Title"] = "Choferes";
}

<h1>Choferes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.choferId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cedula)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.choferId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cedula)
            </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Bus" asp-action="BusesChofer" asp-route-id="@item.choferId"
                       class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Buses del chofer</a>
                        <a asp-controller="Chofer" asp-action="Details" asp-route-id="@item.choferId"
                       class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Detalles</a>
                        <a asp-controller="Chofer" asp-action="Edit" asp-route-id="@item.choferId"
                       class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Editar</a>
                        <a asp-controller="Chofer" asp-action="Delete" asp-route-id="@item.choferId"
                       class="btn btn-danger mx-2"><i class="bi bi-trash"></i> Eliminar</a>
                    </div>
                </td>
        </tr>
}
    </tbody>
</table>
