            <th>
                @Html.DisplayNameFor(model => model.choferId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.busId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estadoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rutaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.choferId)
            </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Bus" asp-action="Details" asp-route-id="@item.busId"
                       class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Detalles</a>
                        <a asp-controller="Bus" asp-action="Edit" asp-route-id="@item.busId"
                       class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Editar</a>
                        <a asp-controller="Bus" asp-action="Delete" asp-route-id="@item.busId"
                       class="btn btn-danger mx-2"><i class="bi bi-trash"></i> Eliminar</a>
                    </div>
                </td>
