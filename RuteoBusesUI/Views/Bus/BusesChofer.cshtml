@model IEnumerable<RuteoBusesDAL.Bus>

@{
    ViewData["Title"] = "BusesChofer";
}

<h1>BusesChofer</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.busId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estadoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rutaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.choferId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.busId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estadoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rutaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.choferId)
            </td>
                <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Bus" asp-action="Details" asp-route-id="@item.busId"
                       class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Buses</a>
                            <a asp-controller="Bus" asp-action="Edit" asp-route-id="@item.busId"
                       class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                                    <a asp-controller="Bus" asp-action="Delete" asp-route-id="@item.busId"
                       class="btn btn-danger mx-2"><i class="bi bi-trash"></i> Delete</a>
                        </div>
                    </td>
        </tr>
}
    </tbody>
</table>
