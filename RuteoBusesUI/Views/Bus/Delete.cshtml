@model RuteoBusesDAL.Bus

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    


    <form method="post" asp-action="DeletePost" asp-route-id="busId">
        <input asp-for="busId" hidden/>
        <div class="border p-3 mt-4">
            <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            </div>
            <div asp-validation-summary="All"></div>
            <div class="mb-3">
                <label asp-for="estadoId"></label>
                <input asp-for="estadoId" disabled class="form-control"/>
            </div>
            <div class="mb-3">
                <label asp-for="rutaId"></label>
                <input asp-for="rutaId" disabled class="form-control"/>
            </div>
            <div class="mb-3">
                <label asp-for="choferId"></label>
                <input asp-for="choferId" disabled class="form-control" />
            </div>
            <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
            <a asp-controller="Bus" asp-action="Index" style="width:150px" class="btn btn-secondary">Back to list</a>
        
        </div>
    </form>
</div>
