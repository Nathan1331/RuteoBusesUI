@model IEnumerable<RuteoBusesDAL.Ruta>

@{
    ViewData["Title"] = "Rutas";
}

<h1>Rutas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.rutaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombreRuta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.montoEstimado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.montoRecibido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cantidadDeParadas)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.rutaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombreRuta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.montoEstimado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.montoRecibido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidadDeParadas)
            </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Ruta" asp-action="Details" asp-route-id="@item.rutaId"
                       class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Detalles</a>
                        <a asp-controller="Ruta" asp-action="Edit" asp-route-id="@item.rutaId"
                       class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Editar</a>
                        <a asp-controller="Ruta" asp-action="Delete" asp-route-id="@item.rutaId"
                       class="btn btn-danger mx-2"><i class="bi bi-trash"></i> Eliminar</a>
                    </div>
                </td>
        </tr>
}
    </tbody>
</table>
