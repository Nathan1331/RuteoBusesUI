@model IEnumerable<RuteoBusesDAL.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<h1>Usuarios</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.userId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.clave)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Identificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rolId)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.userId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.clave)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Identificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rolId)
            </td>
                
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Usuario" asp-action="Details" asp-route-id="@item.userId"
                       class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Detalles</a>
                        <a asp-controller="Usuario" asp-action="Edit" asp-route-id="@item.userId"
                       class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Editar</a>
                        <a asp-controller="Usuario" asp-action="Delete" asp-route-id="@item.userId"
                       class="btn btn-danger mx-2"><i class="bi bi-trash"></i> Eliminar</a>
                    </div>
                </td>
        </tr>
}
    </tbody>
</table>
