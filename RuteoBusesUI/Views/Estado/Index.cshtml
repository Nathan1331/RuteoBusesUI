@model IEnumerable<RuteoBusesDAL.Estado>

@{
    ViewData["Title"] = "Estados de los buses";
}

<h1>Estados de los buses</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EstadoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Bus" asp-action="BusesEstado" asp-route-id="@item.EstadoId"
                       class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Buses</a>

                    </div>
                </td>
        </tr>
}
    </tbody>
</table>
